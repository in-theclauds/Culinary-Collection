 <div id="edit-recipe">
    <div class="landing-text">
        <h1>Edit recipe</h1>

        <div class="edit-form">
        <form action="/recipes/update/{{recipeDetails._id}}" method="post">	
        <div class="text-center social-btn">
        </div>

        <div class="frm-group">
        	<div class="inputs">
                 <label for="title">Title: </label>
                <input id="title" type="text" class="edit-control" name="editedTitle" value="{{ recipeDetails.title }}">
        </div>   
        <br>
        <div class="frm-group">
        	<div class="inputs">
                <label for="ingredients">Ingredients: </label>
                <input id="ingredients" type="text" class="edit-control" name="editedIngredient" value="{{ recipeDetails.ingredient }}">
            </div>
            <br>
            <div class="frm-group">
        	<div class="inputs">
                <label for="cuisine">Cuisine:</label>
                <input id="cuisine" type="text" class="edit-control" name="editedCuisine" value="{{ recipeDetails.cuisine }}">
            </div>
            <br>
            <div class="frm-group">
        	<div class="inputs">
                <label for="duration">Duration: </label>
                <input id="duration" type="text" class="edit-control" name="editedDuration" value="{{ recipeDetails.duration }}">
            </div>
            <br>
             <div class="frm-group">
        	<div class="inputs-instruction">
                <label for="instructions">Instructions: </label>
                <input id="instructions" type="text" class="edit-control" name="editedInstructions" value="{{ recipeDetails.instructions }}">
            </div>
            <br>
            <br>
            <div class="frm-group">
            <div class="inputs">
                <br>
              <label for="recipeLevel">Level: </label>
              <select id=“level” name=“editedLevel” value="{{ recipe.level }}">
                    <option value=“Easy-Peasy”>Easy Peasy</option>
                    <option value=“Amateur-Chef”>Amateur Chef</option>
                    <option value=“Pro-Chef”>Pro Chef</option>
                  </select>
            </div>
        </div>     
        <br>
            <div class="frm-group">
        	<div class="inputs">
                <label for="dishType">Dishtype: </label>
                  <select id=“dishType” name=“editedDishType” value="{{ recipe.dishtype }}">
                    <option value=“Breakfast”>Breakfast</option>
                    <option value=“Snack”>Snack</option>
                    <option value=“Drink”>Drink</option>
                    <option value=“Dessert”>Dessert</option>
                    <option value=“Other”>Other</option>
                  </select>
            </div>
        </div>
        <br>
            <div class="frm-group">
             <label>Upload an image: </label><input type="file" name="photo" class="submiting-btn center-block submit-btn"> </input>
                  <br>
            <button type="submit" class="btn btn-success center-block edit-btn submitBTN">Edit</button>
        <div class="clearfix">
            {{!-- <a href="#" class="center text-success">Forgot Password?</a>
            <br> --}}
            {{!-- <div class="hint-text small">Don't have an account? <a href="/signup" class="text-success">Register Now!</a></div> --}}
        </div>  
        
    </form>
{{!-- //need for each loop that prints each theRecipe
// work on recipes API once routes are functioning --}}
<h1 class="elegantshd theRecipes">Recipes</h1>
<div id="theRecipes" class="container-fluid">
  {{#each recipes}}
  {{!-- <div class="recipeList"> --}}
    <div class="recipeCol">
      <img src="{{this.image}}" class="recipe-images">
{{!-- if statement if recipe doesnt have image use this.imgPath --}}
     <h2>{{this.title}}</h2>
     
     <h4>{{this.dishType}}</h4>
     
     <h4>{{this.cuisine}}</h4>
     
     <h4>{{this.level}}</h4>
     
     <h4>{{this.duration}}</h4>
     
     <ul>
       {{#each this.ingredients}}
     <li>{{this}}</li>
     {{/each}}
     </ul>
     
     <ol>
       {{#each this.instructions}}
     <li>{{this}}</li>
     {{/each}}
     </ol>
     <br>
     <a id="send-data-update" class="btn btn-secondary" href="recipes/edit/{{this._id}}">Edit</a>
    </div>
        
  {{/each}}
{{!-- </div> --}}
</div>